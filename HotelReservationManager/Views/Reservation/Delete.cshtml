@model HotelReservationManager.Data.Models.Reservation

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Reservation</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Room number
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Room.Number)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CheckInTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CheckInTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CheckOutTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CheckOutTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Breakfast)
        </dt>
        <dd class="col-sm-10">
            @(Model.Breakfast ? "Included" : "Not included")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AllInclusive)
        </dt>
        <dd class="col-sm-10">
            @(Model.Breakfast ? "Allinclusive" : "Not allinclusive")
        </dd>
        <dt class="col-sm-2">
            Creator username
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Creator.UserName)
        </dd>
        <dt class="col-sm-2">
            Guests
        </dt>
        <dd class="col-sm-10">
            <table class="table table-striped table-hover" style="width: 100%">
                <thead>
                    <tr>
                        <th>
                            Name
                        </th>
                        <th>
                            Phone Number
                        </th>
                        <th>
                            Email
                        </th>
                        <th>
                            Adult
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Guests)
                    {
                        <tr>
                            <td>
                                @(item.FirstName + " " + item.LastName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PhoneNumber)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                @(item.Mature ? "Adult" : "Child")
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
