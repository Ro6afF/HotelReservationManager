@model IEnumerable<HotelReservationManager.Data.Models.User>

@{
    ViewData["Title"] = "Index";
}

<h1>Users</h1>

<p>
    <a asp-action="Create" class="btn btn-success active">Create New</a>
</p>
<table class="table table-striped table-hover" id="userTable" style="width: 100%">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EGN)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HireTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Active)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FireTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @(item.FirstName + " " + item.SecondName + " " + item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EGN)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HireTime)
                </td>
                <td>
                    @(item.Active ? "Active" : "Disabled")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FireTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    <a asp-action="TogleActivity" asp-route-id="@item.Id" class="btn btn-warning active">@(item.Active ? "Disable" : "Activate")</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary active">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger active">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts
{
    <script>
        $(document).ready(function () {
            $('#userTable').DataTable({
                "lengthMenu": [10, 25, 50],
                'columns': [null, null, null, null, null, null, null, null, {
                    'searchable': false,
                    'orderable': false
                }]
            });
        });
    </script>
}
